<hc:Window x:Class="GestionInmuebles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionInmuebles"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Gestión Inmuebles" MinHeight="720" MinWidth="1200"
           Height="720" Width="1200" ShowTitle="True">
    <!-- añadir controls, behavior Icon, ThemeManager-->
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.ColumnSpan="2" Grid.Row="0" Background="#2d2d30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button>Menú Botón</Button>
                <TextBlock></TextBlock>
            </Grid>
        </Border>
        
        <!-- SideMenu -->
        <Grid x:Name="SideMenu" Width="220" Background="#1e1e1e" Visibility="Visible"
              Grid.Row="1" Grid.Column="0">
            <hc:SideMenu TabIndex="0">
                <hc:SideMenuItem>Inicio</hc:SideMenuItem>
                <hc:SideMenuItem>Compañias</hc:SideMenuItem>
                <hc:SideMenuItem>Propiedades</hc:SideMenuItem>
                <hc:SideMenuItem>Configuración</hc:SideMenuItem>
            </hc:SideMenu>
        </Grid>

        <ContentControl x:Name="MainContent" 
                        Grid.Row="1" Grid.Column="1" 
                        Background="White" />
    </Grid>
</hc:Window>